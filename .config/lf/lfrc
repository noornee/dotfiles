# Note on Image Previews
# check luke smith's voidrice repo for help setting it up

# Basic vars
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set icons
set period 1
set cleaner '~/.config/lf/cleaner'
set previewer '~/.config/lf/scope'
set hidden

# cmds/functions
cmd open ${{
    case $(file --mime-type "$(readlink -f $f)" -b) in
		text/*|application/json|inode/x-empty) $EDITOR $fx ;;
		image/svg+xml) display -- $f ;;
		image/*) rotdir $f | grep -i "\.\(png\|jpg\|jpeg\|gif\|webp\|tif\|ico\)\(_large\)*$" |
			setsid -f sxiv -aio 2>/dev/null | while read -r file; do
				[ -z "$file" ] && continue
				lf -remote "send select \"$file\""
				lf -remote "send toggle"
			done &
			;;
		audio/* | application/octet-stream) mpv --audio-display=no $fx ;; # using application/octet-stream for my audios because the ones i have on my machine mime-types isnt right so it defaulted to octet-stream
		video/*) setsid -f mpv $fx -quiet >/dev/null 2>&1 ;;
		application/pdf|application/vnd*|application/epub*) setsid -f zathura $fx >/dev/null 2>&1 ;;
		*) for f in $fx; do setsid $OPENER $f > /dev/null 2> /dev/null & done ;;
    esac
}}

cmd mkdir $mkdir -p "$(echo $* | tr ' ' '\ ')"
cmd touch $touch "$(echo $* | tr ' ' '\ ')"
cmd fzf $nvim $(find . -name "$1" | fzf)
# cmd fzf $nvim $(find . -name "$1" -type f| fzf)

cmd delete ${{
	clear; tput bold setaf 1
	set -f
	printf "$fx\n"
	tput sgr0; tput bold
	printf "delete? [y/n]: "
	read ans
	[ $ans = "y" ] && rm -rf -- $fx
}}

# set wallpaper with feh
# make sure the filename of the image you wannna set does not have a semi-colon
cmd set_wallpaper ${{
	case $(file --mime-type $f | cut -d ':' -f2 | xargs) in
		image/*) feh --bg-fill "$f" ;;
		*) notify-send --urgency=critical --expire-time=5000 "ERROR: invalid file type/format" "\n<b>hint:</b> remove semi-colon \":\" from filename if its a valid image" ;;
	esac
}}

# open alacritty in a floating window
cmd spawn_terminal ${{
	bspc rule -a Alacritty state=floating --one-shot && setsid -f alacritty --working-directory $(pwd)
}}


# removes executable permission from file
# most of the files i copy from my phone/external hard-drive to my machine always seem to have the x perm.
cmd remove_exec ${{
	chmod -x $fx
}}

# mappings
map <c-n> push :mkdir<space>
map <c-t> push :touch<space>
map D delete
map W set_wallpaper 
map F push :fzf<space>
map <f-2> spawn_terminal
map <a-x> remove_exec

# view command history
# map  <up>   cmd-history-prev
# map  <down> cmd-history-next
cmap <up>   cmd-history-prev
cmap <down> cmd-history-next
